html
  head
    title #{title}
  body
    h1 Secure Fields Form
    .checkout-page
      form#authorization-form(method='POST' action='payments/#{payment_id}/authorizations')
        .field
          label#payment_id payment_id: #{payment_id}
        .field          
          label amount: #{amount}
        .field      
          label currency: #{currency}
        .field
          label description: #{description}
        button#auth_button(type='submit') Authorize
    script(src='/javascripts/payments.js')
      

